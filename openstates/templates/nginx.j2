{% if server_name  %}
server {
    listen 80;
    server_name _;
    rewrite ^ $scheme://{{server_name}}$uri permanent;
}
{% endif %}
server {
    listen 80;
{% if server_name %}
    server_name {{server_name}};
{% endif %}
{% if ssl_cert %}
    listen 443 ssl http2;
    ssl_certificate /etc/nginx/certs/{{ssl_cert}};
    ssl_certificate_key /etc/nginx/certs/{{ssl_key}};
    ssl_prefer_server_ciphers on;
    ssl_ciphers EECDH+AESGCM:EDH+AESGCM:AES256+EECDH:AES256+EDH;
    ssl_protocols TLSv1 TLSv1.1 TLSv1.2;
    ssl_session_cache   shared:SSL:10m;
    ssl_session_timeout 10m;
    ssl_dhparam /etc/nginx/certs/dhparams.pem;
{% endif %}

    location / {
        uwsgi_pass unix:///home/openstates/data/uwsgi.sock;
        include uwsgi_params;
    }

    access_log /home/openstates/logs/access.log combined;
    error_log /home/openstates/logs/error.log;
}
